.overlay
    .scanner
        .wrapper.col-xs-12.col-sm-6.col-sm-offset-3
            a(ui-sref="play")
                h2 FERMER
            select.scanner.col-xs-12.col-sm-4.col-sm-offset-4(ng-model="source" ng-options="source as 'Camera ' + source.n for source in videoSources")
                option Camera {{ source.name || source.n }}
            qr-scanner(ng-success="onSuccess(data)" ng-video-error="onError(data)" ng-video-source="source.id" width="100%" height="auto")
